<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Bienvenue sur AK{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('icon/ak.png') }}" type="image/png">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.min.css">
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light" style="height: 120px;">
			<div class="container-fluid justify-content-between">
				<a class="navbar-brand" href="{{ path('app_home') }}" style="text-decoration: none;">
					<img src="{{ asset('image/ak.png') }}" alt="Logo" style="width: 60px;">
					<strong class="fs-2 text-dark-green"> &nbsp; African Kingdom</strong>
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse fs-3 fw-bold" id="navbarSupportedContent">
					<ul class="navbar-nav mx-auto">
						<li class="nav-item">
							<a class="nav-link font-weight-bold text-dark-green" href="#">Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link font-weight-bold text-dark-green" href="#">Annonces</a>
						</li>
						<li class="nav-item">
							<a class="nav-link font-weight-bold text-dark-green" href="#">Histoire</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle font-weight-bold text-dark-green" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Catégories
							</a>
							<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
								<li>
									<a class="dropdown-item" href="#">Alimentaire Exotique</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Artisanat local</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Matières premières rares</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Agriculture et élevage</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Textiles et vêtements</a>
								</li>
							</ul>
						</li>
					</ul>
					<div class="mb-4">
						{% if app.user %}
							<a href="{{ path('app_logout') }}" class="btn btn-danger btn-lg">Déconnexion</a>
						{% else %}
							<a href="{{ path('app_register') }}" class="btn btn-success btn-lg">Inscription</a>
							<a href="{{ path('app_login') }}" class="btn btn-warning btn-lg">Connexion</a>
						{% endif %}
					</div>

				</div>
			</div>
		</nav>

		{% block body %}{% endblock %}

		<footer class="text-center text-lg-start mt-auto">
			<div class="text-center p-3">
				<span>&copy;
					{{ "now"|date("Y") }}
					Kingdom Bell . Tous droits réservés.</span>
				<div>
					<a href="#" class="me-3">Mentions légales</a>
					| &nbsp;
					<a href="#">Politique de confidentialité</a>
				</div>
				<div class="d-flex justify-content-center mt-3">
					<a href="https://github.com/votre-utilisateur" target="_blank" class="me-3">
						<img src="{{ asset('image/git.png') }}" alt="GitHub" style="width: 30px; height: 30px;">
					</a>
					<a href="https://www.linkedin.com/in/votre-utilisateur" target="_blank" class="me-3">
						<img src="{{ asset('image/linkedin.png') }}" alt="LinkedIn" style="width: 30px; height: 30px;">
					</a>
					<a href="mailto:votre-email@example.com" class="me-3">
						<img src="{{ asset('image/mess.png') }}" alt="Contact" style="width: 30px; height: 30px;">
					</a>
				</div>
			</div>
		</footer>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
